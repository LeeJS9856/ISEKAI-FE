{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "module": "ESNext",
        "skipLibCheck": true,
        /* Bundler mode */
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": false,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        /* Linting */
        "strict": false,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noFallthroughCasesInSwitch": false,
        /* Interop */
        "esModuleInterop": true,
        /* Path Aliases */
        "baseUrl": "./",
        "paths": {
            "@/*": [
                "src/*"
            ],
            "@framework/*": [
                "../../../Framework/src/*"
            ]
        }
    },
    "include": [
        "src",
        "vite.config.mts",
        "../../../Framework/src/**/*.ts",
        "public/Core/live2dcubismcore.d.ts"
    ]
}